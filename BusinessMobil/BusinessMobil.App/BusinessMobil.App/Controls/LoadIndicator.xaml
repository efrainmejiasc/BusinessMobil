            VerticalOptions="Center">
            <ActivityIndicator IsRunning="True" Color="#FFFFFF" />
            <!--<Label
                FontAttributes="Bold"
                Text="Loading..."
                TextColor="White" />-->
        </StackLayout>
    </ContentPage.Content>
