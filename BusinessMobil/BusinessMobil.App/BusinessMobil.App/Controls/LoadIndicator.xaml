             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="BusinessMobil.App.Controls.LoadIndicator"
             BackgroundColor="#80000000">
    
