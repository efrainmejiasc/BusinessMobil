<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BusinessMobil.App.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="1" Margin="0,10,0,0">
                    <Label Text="Email"/>
                    <Entry/>
                </StackLayout>
                <StackLayout Grid.Row="2" Margin="0,10,0,0">
                    <Label Text="Usuario"/>
                    <Entry/>
                </StackLayout>
                <StackLayout Grid.Row="3" Margin="0,10,0,0">
                    <Label Text="Contraseña" Grid.Row="5"/>
                    <Entry Grid.Row="6"/>
                </StackLayout>
                <StackLayout Grid.Row="4" Margin="0,10,0,0">
                    <Label Text="Compañia" Grid.Row="7"/>
                    <Entry Grid.Row="8"/>
                </StackLayout>
                <Button Grid.Row="5" Text="Registrarse"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
