<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:BusinessMobil.App.ViewModel"
             x:Class="BusinessMobil.App.Views.GenerarListaAsistenciaPage">

    <ContentPage.BindingContext>
        <viewModel:GenerarListaAsistenciaViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <ScrollView>
            <Grid Style="{StaticResource MargenContentPage}">
                <ActivityIndicator IsRunning="{Binding IsRunning}" Color="Black" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                <StackLayout Grid.Row="0">
                    <Label Text="Grado"></Label>
                    <Picker></Picker>
                </StackLayout>
                <StackLayout Grid.Row="1">
                    <Label Text="Grupo"></Label>
                    <Picker></Picker>
                </StackLayout>
                <StackLayout Grid.Row="2">
                    <Label Text="Turno"></Label>
                    <Picker></Picker>
                </StackLayout>
            <StackLayout Grid.Row="3">
                <Button Command="{Binding GenerarListaAsistenciaCommand}" Text="Generar Lista de Asistencia" IsEnabled="{Binding IsEnable}"/>
            </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
